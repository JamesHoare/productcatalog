# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET        /                                 controllers.MessageController.index()
GET        /product/:id                      controllers.Products.search(id: Long)
GET        /message                          controllers.MessageController.getMessage()
GET        /products                         controllers.Products.list
GET        /products/:ean                    controllers.Products.details(ean: Long)
GET        /assets/javascripts/routes        controllers.MessageController.javascriptRoutes()
PUT        /products/:id                    controllers.Products.save(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.at(path="/public", file)
GET        /webjars/*file                    controllers.WebJarAssets.at(file)